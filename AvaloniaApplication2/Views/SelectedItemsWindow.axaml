<!-- SelectedItemsWindow.xaml -->
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:AvaloniaApplication2.ViewModels"
        mc:Ignorable="d"
        Width="300" Height="200"
        x:Class="AvaloniaApplication2.Views.SelectedItemsWindow"
        x:DataType="viewModels:SelectedItemModel">

    <Grid>
        <ListBox x:Name="listbox" Width="300" Height="200" HorizontalAlignment="Center" SelectionMode="Multiple" VerticalAlignment="Center" ItemsSource="{Binding SelectedItems}" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock TextAlignment="Center" Text="{Binding}" Foreground="#2D73FF"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>

</Window>